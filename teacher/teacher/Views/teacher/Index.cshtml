     <script>
         $(function () {
             $('#tb').datagrid({
                 url: '/teacher/getteacher',
                 width: 500,
                 height: 300,
                 fitColumns: true,
                 singleSelect: true,
                 pagination:true,
                 toolbar: [{
                     text: '添加',
                     iconCls: 'icon-add',
                     handler: function () {
                         $("#teacher_add_dig").dialog({
                             title: "部门添加---",
                             iconCls: 'icon-add',
                             closed: false,
                             modal: true,
                             href: '/teacher/add',
                             width: 400,
                             height: 300,
                             buttons: [
                                 {
                                     text: '保存',
                                     iconCls: 'icon-save',
                                     handler: function () {
                                         var da = $("#teacher_add").serialize();
                                         $.get("/teacher/addteacher", da, function (data) {

                                             if (data == "ok") {
                                                 $.messager.show({
                                                     title: '提示...',
                                                     msg: '保存成功',
                                                     showType: 'show'
                                                 })
                                                 $("#teacher_add_dig").dialog("close");
                                                 $("#tb").datagrid("reload");

                                             }

                                             else {
                                                 alert("出错");
                                             }


                                         }, "text")
                                     }


                                 }, {
                                     text: '取消',
                                     iconCls: 'icon-cancel',
                                     handler: function () {
                                         $("#teacher_add_dig").dialog("close");

                                     }

                                 }
                             ]

                         });
                     }
                 },

                 {
                     text: '修改',
                     iconCls: 'icon-edit',
                     handler: function () {
                         var id = $("#tb").datagrid("getSelected").ID;
                         var url = "/teacher/edit?id=" + id;
                         $("#teacher_edit_dig").dialog({
                             title: "部门修改---",
                             iconCls: 'icon-edit',

                             modal: true,
                             width: 400,
                             height: 300,
                             href: url,
                             buttons: [
                                 {
                                     text: '修改',
                                     iconCls: 'icon-edit',
                                     handler: function () {
                                         var id = $("#teacher_edit_id").val();
                                         var da = $("#teacher_edit").serialize();
                                         var dig;
                                         var DeptID = $("#teacher_edit_dep").val();
                                         var name = $("#teacher_edit_teachername").val();
                                         var tID = $("#teacher_edit_teacherID").val();
                                         if ($("#teacher_edit_IsLogin").is("checked")) {
                                             dig = 1;

                                         }
                                         else { dig = 0;}
                                         $.get("/teacher/editteacher", {ID:id, DeptID: DeptID ,Name:name,TeacherID:tID,IsLogin:dig,Status:0}, function (data) {
                                           
                                           
                                             if (data == "ok") {
                                                 $.messager.show({
                                                     title: '提示...',
                                                     msg: '修改成功',
                                                     showType: 'show'
                                                 })

                                                 $("#tb").datagrid("reload");
                                                 $("#teacher_edit_dig").dialog("close");
                                             }
                                             else { alert("失败"); }

                                         }, "text")

                                     }


                                 }, {
                                     text: '取消',
                                     iconCls: 'icon-cancel',
                                     handler: function () {
                                         $("#teacher_edit_dig").dialog("close");

                                     }

                                 }
                             ]

                         });

                     }

                 }, '-', {
                     text: '删除',
                     iconCls: 'icon-remove',
                     handler: function () { 
                         var row = $("#tb").datagrid("getSelected")
                         if (row != null) {
                             var name=row.Name;
                             $.messager.confirm("提示...", "确定要重置“" + name + "”密码吗", function (retult) {
                                 if (retult) {
                                     var id = row.ID;
                                     $.get("/teacher/delete/", { id: id }, function (data) {
                                         if (data == "ok") {
                                             $("#tb").datagrid("reload");
                                            
                                             $.messager.show({
                                                 title: '提示...',
                                                 msg: '删除成功',
                                                 showType: 'show'

                                             })
                                         }

                                         else
                                             $.messager.show({
                                                 title: '提示...',
                                                 msg: '删除失败',
                                                 showType: 'show'

                                             })


                                     }, "text")
                                 }
                             })
                             
                         }
                        
                     }
                     }, 
                     
                 '-', {
                     text: '重置',
                      inconCls: 'icon-lock',
                      handler: function () {
                          var row = $("#tb").datagrid("getSelected");
                          if (row ==null) {
                              $.messager.alert("提示...", "请选择重置密码");
                           return
                          }
                         
                          else {
                              var name = row.Name;
                              $.messager.confirm("提示...","确定要重置“" + name + "”密码吗", function (retult) {
                                  if (retult) {
                                      var id = row.ID;
                                      $.get("/teacher/chongzhi/", { id: id }, function (data) {
                                          if (data == "ok")

                                                           $.messager.show({
                                                            title: '提示...',
                                                             msg: '重置成功',
                                                             showType: 'show'

                                                           })
                                          else
                                                      $.messager.show({
                                                       title: '提示...',
                                                       msg: '重置失败',
                                                        showType: 'show'

                                                          })


                                      }, "text")


                                  }


                              })

                          }
                      }
                 }
                 ],
                
       

                 columns: [[
                     { field: 'Name', title: '专业名称', width: 100 },
                 { field: 'teacherID', title: '教工号', width: 100 },
                  {
                      field: 'IsLogin', title: '允许登陆',
                      formatter: function (val, row) {
                          if (val == "0")
                          { return "<span style='color:red'>禁止</span>" }
                          else
                          {
                              return "允许";
                          }
                      },
                      width: 50
                  },
               { field: 'departmentName', title: '部门名称', width: 100 }
                 ]]

             })
         })

    </script>
</head>
<body>
    <div>
        <table id="tb"></table>
    <div id="teacher_add_dig"></div>
      <div id="teacher_edit_dig"></div>
    </div>
