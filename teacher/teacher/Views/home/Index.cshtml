    <script src="~/jquery-easyui-1.5.1/jquery-2.2.1.js"></script>
  
    <script>
        $(function () {
            $(".submit").click(function () {
                var user = $(".admin").val();
                var pass = $(".passWord").val();
                $.get("/home/Login", { username: user, password: pass, role: $(":radio[name='o']").val() }, function (data) {//ok:登录成功，其它：失败
                    if (data == "ok") {
                        location.href = "/home/main";
                    }
                    else
                        alert("登录失败！");
                }, "text");
            });
        });
    </script>
